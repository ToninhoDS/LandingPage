{
  "name": "Barbearia App - Agendamentos",
  "short_name": "Barbearia App",
  "description": "Aplicativo completo para agendamento de serviços em barbearias com notificações push, chat e integração WhatsApp",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#2563eb",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "pt-BR",
  "categories": ["lifestyle", "business", "productivity"],
  "dir": "ltr",
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "icons": [
    {
      "src": "/icons/icon-192x192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-512x512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Novo Agendamento",
      "short_name": "Agendar",
      "description": "Fazer um novo agendamento rapidamente",
      "url": "/agendamento",
      "icons": [
        {
          "src": "/icons/shortcut-agendamento.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Meus Agendamentos",
      "short_name": "Histórico",
      "description": "Ver histórico de agendamentos",
      "url": "/historico",
      "icons": [
        {
          "src": "/icons/shortcut-historico.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Chat",
      "short_name": "Chat",
      "description": "Conversar com a barbearia",
      "url": "/chat",
      "icons": [
        {
          "src": "/icons/shortcut-chat.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Notificações",
      "short_name": "Notificações",
      "description": "Ver notificações recentes",
      "url": "/notificacoes",
      "icons": [
        {
          "src": "/icons/shortcut-notifications.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+barbearia",
      "url": "/agendamento?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/calendar": [".ics"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/calendar"]
        }
      ]
    }
  },
  "screenshots": [
    {
      "src": "/screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard principal do aplicativo"
    },
    {
      "src": "/screenshots/mobile-1.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Tela de agendamento no mobile"
    }
  ]
}